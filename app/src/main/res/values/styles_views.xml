<resources>
  <!--textSwitcher-->
  <style name="TextSwitcherSmall">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
  </style>

  <style name="TextSwitcherLarge">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
  </style>

  <style name="TextSwitcherSmallHighLighted">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textColor">@color/textHighlighted</item>
  </style>

  <style name="TextSwitcherSmallAllCaps">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    <item name="android:textAllCaps">true</item>
  </style>
</resources>