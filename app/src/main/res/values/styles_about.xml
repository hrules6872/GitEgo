<resources>

  <style name="AppThemeAbout" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/greyBackground</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CardViewAbout">
    <item name="android:layout_marginLeft">@dimen/default_margin</item>
    <item name="android:layout_marginRight">@dimen/default_margin</item>
    <item name="android:layout_marginBottom">@dimen/default_margin</item>
    <item name="android:padding">@dimen/default_margin</item>
    <item name="cardBackgroundColor">@color/about_cardViewBackground</item>
  </style>

  <style name="AppTitleAbout">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/about_titleTextColor</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="AppVersionAbout">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CardViewTitleAbout">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    <item name="android:textColor">@color/about_titleTextColor</item>
    <item name="android:layout_margin">@dimen/default_margin</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CardViewButtonAbout" parent="@style/Widget.AppCompat.Button.Borderless">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:layout_marginLeft">@dimen/about_buttonMarginLeftHack</item>
  </style>
</resources>